<h1> Update Student </h1>
<% if flash[:errors_array] %>
	<% flash[:errors_array].each do |error| %>
	<%= error %>
  <% end %>
<% end %>

<%= form_for @student do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br>
  <%= f.label :mod %>
  <br>
  <%= f.text_field :mod %>
  <br>
  <%= f.submit %>
  <% end %>
